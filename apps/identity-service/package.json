{
  "name": "@org/identity-service",
  "scripts": {
    "test:e2e": "dotenv -e .env.test -- pnpm vitest run --config vitest.config.e2e.ts",
    "dev:identity": "tsx --env-file=apps/identity-service/.env apps/identity-service/src/main.ts"
  },
  "version": "0.0.1",
  "private": true,
   "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": ["{options.outputPath}"],
        "options": {
          "platform": "node",
          "outputPath": "dist/apps/identity-service",
          "format": [
            "cjs"
          ],
          "bundle": true,
          "main": "apps/identity-service/src/main.ts",
          "tsConfig": "apps/identity-service/tsconfig.app.json",
          "thirdParty": true,
          "external": [
            "@prisma/client",
            "@prisma/adapter-pg",
            "pg",
            "bcrypt"
          ],
          "esbuildOptions": {
            "sourcemap": true
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/identity-service/dist/package.json",
          "{workspaceRoot}/apps/identity-service/dist/pnpm-lock.yaml"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/identity-service/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@org/identity-service:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@org/identity-service:build:development"
          },
          "production": {
            "buildTarget": "@org/identity-service:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "prisma": {
        "executor": "nx:run-commands",
        "options": {
          "command": "prisma generate",
          "cwd": "apps/identity-service"
        }
      }
    }
  },
  "dependencies": {
    "@org/dtos": "workspace:*",
    "@org/errors": "workspace:*",
    "@org/http": "workspace:*",
    "@org/logger": "workspace:*",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "amqplib": "^0.10.9",
    "express": "^4.21.2",
    "pg": "^8.17.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "prisma": "^7.2.0",
    "vitest": "^4.0.18",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}